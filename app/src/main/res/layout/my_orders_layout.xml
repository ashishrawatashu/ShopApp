<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        app:cardCornerRadius="5dp"
        android:layout_height="wrap_content">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/productName_TV"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="0dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Asus zenfone max pro m2 "
                android:fontFamily="@font/nunito"
                android:textSize="22sp"
                app:layout_constraintEnd_toStartOf="@+id/product_image_IV"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/totalPrice_TV"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="0dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/productName_TV"
                android:text="Total Price : 5555"
                android:fontFamily="@font/nunito"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/product_image_IV"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/quantity_TV"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_width="0dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/totalPrice_TV"
                android:text="Quantity : 1 "
                android:fontFamily="@font/nunito"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/product_image_IV"
                android:textColor="#FC8E8E80"/>

            <TextView
                android:id="@+id/shopName_TV"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_width="0dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/quantity_TV"
                android:text="Seller : Shop 11 "
                android:fontFamily="@font/nunito"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/product_image_IV"
                android:textColor="#FC8E8E80"/>

            <TextView
                android:id="@+id/status_TV"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_width="0dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/shopName_TV"
                android:text="Status : pending "
                android:fontFamily="@font/nunito"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/product_image_IV"
                android:textColor="#FC8E8E80"/>

            <ImageView
                android:layout_marginRight="10dp"
                android:id="@+id/product_image_IV"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/productName_TV"
                android:scaleType="fitXY"
                android:src="@drawable/common_google_signin_btn_icon_dark_normal"/>


            <TextView
                android:id="@+id/click_here_TV"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/status_TV"
                android:text="@string/clickHere"
                android:fontFamily="@font/nunito"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/product_image_IV"
                android:textColor="@color/colorPrimary"/>



        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>